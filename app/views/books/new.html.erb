<h<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @book, local: true) do |form| %>
      <%= form.text_field :book_name, placeholder: "本のタイトル" %>
      <%= form.text_field :image, placeholder: "Image Url" %>
      <%= form.collection_select :genre_id, Genre.all, :id, :name, {prompt:"選択してください"} %>
      <%= form.text_area :derection, placeholder: "text", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>